<style name="LoadingProgressBarStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:indeterminate">true</item>
    <item name="android:progressTint">@color/red</item>
    <item name="android:backgroundTint">@color/red</item>
</style>
<style name="LoadingMessageStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">16dp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">18sp</item>
</style>
<!-- <style name="SupportTitleStyle">
    <item name="android:textColor">@color/white</item>
</style> -->

 <style name="SupportButtonStyle" parent="Widget.MaterialComponents.Button">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:backgroundTint">@color/whatsapp_green</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:drawablePadding">8dp</item>
    <item name="android:layout_marginBottom">8dp</item>
</style>
<style name="SupportTitleStyle">
    <item name="android:textColor">@color/white</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:backgroundTint">@color/support_button_background</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:drawablePadding">8dp</item>
    <item name="android:layout_marginBottom">8dp</item>
</style>

<color name="support_button_background">#25D366</color>
</resources>